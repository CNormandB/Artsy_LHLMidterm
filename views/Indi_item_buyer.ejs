<!DOCTYPE html>
<html lang="en">

<head>
  <title>Item Page</title>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <!-- <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" /> -->

  <script src="/vendor/jquery-3.0.0.js"></script>
  <script defer src="/scripts/app.js"></script>
  <%- include('partials/_head.ejs'); %>
</head>

<body>
  <%- include('partials/_header') %>
    <div class="container">
      <%- include('partials/_card_for_item_page.ejs', {item}); %>

      <div class="row">
        <div class="col">

      <% if(!favorite) {%>
        <form method="post" action="/items/<%= id %>/like">
          <button class="waves-effect waves-light btn" type="submit">Like</button>
        </form>
        <% } else { %>
          <form method="post" action="/items/<%= id %>/like">
            <button class="waves-effect waves-light btn" type="submit">Unlike</button>
          </form>
        <% } %>

        </div>
      </div>


        <div class="row">
          <div class="input-field col s6">
            <i class="material-icons prefix">mode_edit</i>
            <a
              href="mailto:<%= user.email%>subject=I'd%20like%20to%20buy%20<%= item.name %>&body=I%20am%20interested%20in%20this%20piece">
              <button class="waves-effect waves-light btn">Send Message</button>
              <!-- email address is hardcoded just for the demonstration -->
            </a>
          </div>
        </div>


    </div>
</body>

</html>
