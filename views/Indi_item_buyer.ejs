  <% if(!favorite) {%>
  <form method="post" action="/items/<%= id %>/like">
  <button class="waves-effect waves-light btn" type="submit">Like</button>
  </form>
  <% } else { %>
  <form method="post" action="/items/<%= id %>/like">
  <button class="waves-effect waves-light btn" type="submit">Unlike</button>
  </form>
  <% } %>



      <div class="row">
        <form class="col s12">
          <div class="row">
            <div class="input-field col s6">
              <i class="material-icons prefix">mode_edit</i>
              <a href="mailto:<%= item.email %>?subject=I'd%20like%20to%20buy%20<%= item.name %>&body=I%20am%20interested%20in%20this%20piece!">
              <button class="waves-effect waves-light btn" >Send Message</button>
