<div class="card">

  <div class="card-image">
    <img src="<%= item.link_to_pic %>" class="materialboxed">
    <span class="card-title" style="color:black; font-weight: bold" ;>
      <%= item.product_name %>
    </span>
    <% if (item.sold) { %> <a class="btn btn-floating btn-large red halfway-fab">sold</a>
      <% } %>

      <% if (item.favorite) { %> <a class="btn btn-floating btn-large red halfway-fab"><i class="fa-solid fa-heart fa-xl" style="color: #f9f5f5;"></i></a>
    <% } %>
  </div>

  <div class="card-content">
    <p>
          <%= (item.price_in_cents/100).toLocaleString("en-US", {style:"currency", currency:"USD"}) %><br>
    </p>

    <p><a href="/items/<%= item.id %>">Click for Details</a><br></p>

        <hr>

  </div>

</div>


