<!DOCTYPE html>
<html lang="en">

<head>
  <title>Home Page</title>

  <meta charset="UTF-8" >
  <meta http-equiv="X-UA-Compatible" content="IE=edge" >
  <meta name="viewport" content="width=device-width, initial-scale=1.0" >

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />

  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

  <script src="https://kit.fontawesome.com/ba60cfc2d9.js" crossorigin="anonymous"></script>

  <script src="/vendor/jquery-3.0.0.js"></script>
  <script defer src="/scripts/app.js"></script>
</head>

<!-- <header>
  <%- include('partials/_header.ejs'); %>
</header> -->

<body>

 <div class= "profile user-info">
  <h1>Profile Page</h1>
    <div class="profile_top">
      <h3><i class="fa-solid fa-person-walking"></i></h3>
      <h3><%= sellersProducts[0].name %></h3>
      <h3><%= sellersProducts[0].email %></h3>
    </div>
  </div>


  <div class="profile favourites">
    <h4>My Favourites</h4>
    <div>
      <!-- to be hidden if there are favourites -->
      <p>You have no Favourites yet. ðŸ¤· </p>

      <!-- to be hidden if there are no favourites -->
      <div>
        <h5>Product Name</h5>
        <img src="https://placekitten.com/110/110" alt="placekitten">
        <p>
          Description <br>
          Price<br>
        </p>
      </div>

    </div>
  </div>



  <div class="profile my-products">
    <h4>My Art for Sale</h4>
    <div>
      <!-- to be hidden if the user is owner of any products -->
      <p>You have no art for sale yet. ðŸ¤· </p>

      <!-- to be hidden if user has no products -->
      <div class="row">
        <div class="col s12 m6">
          <% for (let product of sellersProducts) { if (!product.is_deleted) { %>
          <div class="card">
            <div class="card-image">
              <img src="<%= product.link_to_pic %>">
              <span class="card-title"><%= product.product_name %></span>
              <a class="btn-floating halfway-fab waves-effect waves-light red"><i class="fa-regular fa-heart"></i></a>
            </div>
            <div class="card-content">
              <p><%= product.description %></p>
              <p>Change to dollars? <%= product.price_in_cents %></p>
              <p><a href="#">This is a link to the Indv item</a></p>
            </div>
          </div>
          <% }} %>
        </div>
      </div>

    </div>
  </div>

  <div class="profile_bottom">
    <a class="waves-effect waves-light btn-large"><i class="material-icons right"><i class="fa-solid fa-palette"></i></i>Add an Item to Sell</a>
  </div>
</body>

</html>
