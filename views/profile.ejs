<!DOCTYPE html>
<html lang="en">

<head>
  <title>
    <%= userData.name %>'s Profile
  </title>

  <meta charset="UTF-8" >
  <meta http-equiv="X-UA-Compatible" content="IE=edge" >
  <meta name="viewport" content="width=device-width, initial-scale=1.0" >

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />

  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
  <!-- <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" /> -->
  <!-- <link rel="stylesheet" href="/vendor/border-box.css" /> -->
  <link rel="stylesheet" href="/styles/cards.css" />
  <link rel="stylesheet" href="/styles/main.css" />
  <!-- <link rel="stylesheet" href="/styles/layout.css" /> -->


  <script src="https://kit.fontawesome.com/ba60cfc2d9.js" crossorigin="anonymous"></script>

  <script src="/vendor/jquery-3.0.0.js"></script>
  <script defer src="/scripts/app.js"></script>
  <script src="/scripts/profile.js"></script>

  <%- include('partials/_head.ejs'); %>
</head>


<body>
  <header>
    <%- include('partials/_header.ejs'); %>
  </header>

 <div class= "profile user-info">

  <h1>Profile Page</h1>
  <div class="profile user-info">
    <h1>Profile Page</h1>
    <div class="profile_top">

      <ul class="collection">
        <li class="collection-item avatar">
          <img src="/public/img/User_Profile_icon.png" alt="avatar" class="circle">
          <span class="title"><%= userData.name %></span>
          <p><%= userData.email %></p>
          <a href="/logout" class="secondary-content"><i class="fa-solid fa-right-from-bracket"></i></a>
        </li>


      <!-- <h3><i class="fa-solid fa-person-walking"></i></h3>
      <h4><%= userData.name %></h4>
      <h4><%= userData.email %></h4> -->
    </div>
  </div>


  <div class="profile favourites">
    <h4>My Favourites</h4>
    <div>
      <!-- to be hidden if there are favourites -->
      <p>You have no Favourites yet. ðŸ¤· </p>

      <!-- to be hidden if there are no favourites -->
      <div class="row">
        <div class="col s12 m6">
          <% for (let fav of favoritesData) { if (!fav.is_deleted) { %>
            <div class="card">
              <div class="card-image">
                <img src="<%= fav.link_to_pic %>">
                <span class="card-title"><%= fav.product_name %></span>
                <a class="btn-floating halfway-fab waves-effect waves-light red"><i class="fa-regular fa-heart"></i></a>
              </div>
              <div class="card-content">
                <p><%= fav.description %></p>
                <p> <%= (fav.price_in_cents/100).toLocaleString("en-US", {style:"currency", currency:"USD"}) %></p>
                <p><a href="#">This is a link to the Indv item id:<%= fav.product_id %></a></p>
              </div>
            </div>
          <% }} %>
        </div>
      </div>

    </div>
  </div>



  <div class="profile my-products">
    <h4>My Art for Sale</h4>
    <div>
      <!-- to be hidden if the user is owner of any products -->
      <% if (sellersProducts.length < 1 || sellersProducts == undefined) { %>
            <h5>You have no art for sale yet. ðŸ¤· </h5>

      <!-- to be hidden if user has no products -->
      <% } else { %>
        <div class="container">
          <div class="row"></div>
          <% for (let product of sellersProducts) { if (!product.is_deleted) { %>

            <div class="col 14 m4 s12">
              <div class="card">

                <div class="card-image">
                  <img src="<%= product.link_to_pic %>">
                  <span class="car-title"><%= product.name %></span>
                  <a class="btn btn-floating halfway-fab"><i class="fa-solid fa-bars"></i></a>
                </div>

                <div class="card-content">
                  <p><%= product.description %></p>
                  <p><%= (product.price_in_cents/100).toLocaleString("en-US", {style:"currency", currency:"USD"}) %></p>
                  <p><a href="/auth/login">This is a link to the Indv item</a></p>
                </div>

              </div>
            </div>
          <% }} %>
          </div>
        </div>
      <% } %>


    </div>
  </div>

  <div class="profile_bottom">
    <a href="/add-item" class="waves-effect waves-light btn-large"><i class="material-icons right"><i class="fa-regular fa-image"></i></i>Add Art to Sell</a>
  </div>
</body>

</html>
